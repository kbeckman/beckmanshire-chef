{
  "name":         "beckmanshire",
  "description":  "Default attributes, etc. for all machines provisioned with beckmanshire-chef.",
  "default_attributes": {
    "bootstrap": {
      "user": "kbeckman",
      "homesick": {
        "castle_name": "beckmanshire",
        "github_repo": "git://github.com/kbeckman/beckmanshire.git",
        "additional_symlinks": [
          {
            "source": "~/.homesick/repos/beckmanshire/home/.gitconfig-mac",
            "link":   "~/.gitconfig"
          }
        ]
      }
    },
    "homebrew": {
      "owner":        "kbeckman",
      "auto-update":  true,
      "formulas":     [],
      "casks":        []
    },
    "rvm": {
      "user_installs": [
        {
          "user":           "kbeckman",
          "install_rubies": true,
          "default_ruby":   "ruby-2.3.3",
          "global_gems": [
            {
              "name":   "rubygems-bundler",
              "action": "remove"
            },
            { "name": "bundler" },
            { "name": "homesick" },
            { "name": "pry" },
            { "name": "pry-byebug" },
            { "name": "rake" },
            { "name": "tmuxinator" }
          ]
        }
      ]
    }
  }
}