{
  "run_list": [
    "recipe[bootstrap_osx]",
    "recipe[homebrew]",
    "recipe[homebrew::install_formulas]",
    "recipe[homebrew::install_casks]",
    "recipe[bootstrap_osx::brew_link_openssl]",
    "recipe[rvm::user]"
  ],
  "automatic": {
    "ipaddress": "vm-osx-sandbox"
  },
  "bootstrap_osx": {
    "osx_user": "kbeckman"
  },
  "homebrew": {
    "owner":        "kbeckman",
    "auto-update":  true,
    "formulas": [
      "git",
      "openssl",
      "ssh-copy-id",
      "p7zip",
      "tree",
      "wget",
      "zsh",
      "tmux",
      "vim",
      "awscli",
      "mas",
      "postgresql",
      "sqlite",
      "imagemagick",
      "phantomjs",
      "elixir"
    ],
    "casks": [
      "gfxcardstatus",
      "nosleep",
      "flux",
      "tunnelblick",
      "superduper",
      "screenhero",
      "skype",
      "libreoffice",
      "firefox",
      "torbrowser",
      "google-chrome",
      "google-drive",
      "google-earth",
      "google-earth-web-plugin",
      "adobe-reader",
      "atom",
      "iterm2",
      "rubymine",
      "datagrip",
      "sourcetree",
      "diffmerge",
      "virtualbox",
      "virtualbox-extension-pack",
      "vagrant",
      "dockertoolbox"
    ]
  },
  "rvm": {
    "user_installs": [
      {
        "user":           "kbeckman",
        "install_rubies": true,
        "default_ruby":   "ruby-2.3.1",
        "rubies":         [ "ruby-2.1.6", "ruby-2.2.5" ],
        "global_gems": [
          {
            "name":   "rubygems-bundler",
            "action": "remove"
          },
          { "name": "bundler" },
          { "name": "homesick" },
          { "name": "pry" },
          { "name": "pry-byebug" },
          { "name": "rake" },
          { "name": "tmuxinator" }
        ]
      }
    ]
  }
}
