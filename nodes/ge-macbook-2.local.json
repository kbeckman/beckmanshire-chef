{
  "run_list": [
    "recipe[bootstrap_osx]",
    "recipe[homebrew]",
    "recipe[homebrew::install_formulas]",
    "recipe[homebrew::install_casks]",
    "recipe[bootstrap_osx::brew_link_openssl]",
    "recipe[rvm::user]",
    "recipe[bootstrap_osx::homesick]"
  ],
  "automatic": {
    "ipaddress": "ge-macbook-2.local"
  },
  "bootstrap_osx": {
    "osx_user": "keithbeckman"
  },
  "homebrew": {
    "owner":        "keithbeckman",
    "auto-update":  true,
    "formulas": [
      "git",
      "openssl",
      "ssh-copy-id",
      "p7zip",
      "tree",
      "wget",
      "zsh",
      "tmux",
      "reattach-to-user-namespace",
      "vim",
      "awscli",
      "postgresql",
      "sqlite",
      "mongodb",
      "imagemagick",
      "phantomjs",
      "docker-swarm",
      "go"
    ],
    "casks": [
      "gfxcardstatus",
      "nosleep",
      "flux",
      "screenhero",
      "superduper",
      "gpgtools",
      "skitch",
      "iterm2",
      "firefox",
      "torbrowser",
      "netgeargenie",
      "google-chrome",
      "google-drive",
      "adobe-reader",
      "atom",
      "libreoffice",
      "rubymine",
      "datagrip",
      "sourcetree",
      "dockertoolbox",
      "virtualbox",
      "virtualbox-extension-pack",
      "vmware-fusion",
      "vagrant"
    ]
  },
  "rvm": {
    "user_installs": [
      {
        "user":           "keithbeckman",
        "install_rubies": true,
        "default_ruby":   "ruby-2.3.1",
        "rubies":         [ "ruby-2.2.5" ],
        "global_gems": [
          {
            "name":   "rubygems-bundler",
            "action": "remove"
          },
          { "name": "bundler" },
          { "name": "homesick" },
          { "name": "pry" },
          { "name": "rake" },
          { "name": "rubocop" },
          { "name": "tmuxinator" }
        ]
      }
    ]
  }
}
