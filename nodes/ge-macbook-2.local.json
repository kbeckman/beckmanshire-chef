{
  "run_list": ["recipe[bootstrap::mac_os]"],
  "bootstrap": {
    "user": "keithbeckman"
  },
  "homebrew": {
    "owner":        "keithbeckman",
    "auto-update":  true,
    "formulas": [
      "git",
      "openssl",
      "ssh-copy-id",
      "p7zip",
      "tree",
      "wget",
      "zsh",
      "tmux",
      "reattach-to-user-namespace",
      "vim",
      "awscli",
      "postgresql",
      "sqlite",
      "mongodb",
      "imagemagick",
      "phantomjs",
      "docker-swarm",
      "go"
    ],
    "casks": [
      "gfxcardstatus",
      "nosleep",
      "flux",
      "screenhero",
      "superduper",
      "gpgtools",
      "skitch",
      "iterm2",
      "firefox",
      "torbrowser",
      "netgeargenie",
      "google-chrome",
      "google-drive",
      "adobe-reader",
      "atom",
      "libreoffice",
      "rubymine",
      "datagrip",
      "sourcetree",
      "dockertoolbox",
      "virtualbox",
      "virtualbox-extension-pack",
      "vmware-fusion",
      "vagrant"
    ]
  },
  "rvm": {
    "user_installs": [
      {
        "user":           "keithbeckman",
        "install_rubies": true,
        "default_ruby":   "ruby-2.3.3",
        "global_gems": [
          {
            "name":   "rubygems-bundler",
            "action": "remove"
          },
          { "name": "bundler" },
          { "name": "homesick" },
          { "name": "pry" },
          { "name": "pry-byebug" },
          { "name": "rake" },
          { "name": "tmuxinator" }
        ]
      }
    ]
  }
}
